  %h2 Clojure Basics - Data types
  :clojurecode
    nil      ; equivalent to Java null          ;; nil
    
    true                                        ;; Booleans
    false    ; only nil and false are "falsey"

    (map class [                                ;; Numbers
      1      ; => java.lang.Long
      1.2    ; => java.lang.Double
